{
  "name": "friendsoftypo3/widgets",
  "type": "typo3-cms-extension",
  "description": "Dashboard Widgets for TYPO3",
  "minimum-stability": "dev",
  "homepage": "https://typo3.org",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Richard Haeser",
      "role": "Developer"
    },
    {
      "name": "Koen Wouters",
      "role": "Developer"
    }
  ],
  "require": {
    "typo3/cms-core": "^11.5",
    "typo3/cms-dashboard": "^11.5"
  },
  "autoload": {
    "psr-4": {
      "FriendsOfTYPO3\\Widgets\\": "Classes/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.8",
    "typo3/testing-framework": "^6.16",
    "phpstan/phpstan": "^1.5"
  },
  "scripts": {
    "test:php:unit": [
      "phpunit -c build/phpunit.xml"
    ],
    "test": [
      "@test:php:unit"
    ],
    "cgl": [
      "php-cs-fixer fix -v --dry-run --using-cache false"
    ],
    "cgl-fix": [
      "php-cs-fixer fix -v --using-cache false"
    ]
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "widgets"
    }
  }
}
